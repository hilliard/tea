<div id="new-step-fields" class="modal fade" data-backdrop="static">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Add a Step<%= " to the #{ @test_case.title } Test Case" unless @test_case.title.nil? %></h3>
  </div>
  <div class="modal-body">
    <fieldset>
      <div class="control-group">
        <%= f.label(:step_number, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:step_number, :class => "input-xlarge field", :data => { :validation => "required validate_max_length length50", "validation-error-msg" => "Step Number is required and cannot be longer than 50 characters." }) %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label(:action, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:action, :class => "input-xlarge field", :data => { :validation => "required validate_max_length length50", "validation-error-msg" => "Action is required and cannot be longer than 50 characters." }) %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label(:expected_result, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:expected_result, :class => "input-xlarge field", :data => { :validation => "required validate_length length5-50", "validation-error-msg" => "Expected Result is required and cannot be must be between 5 and 50 characters." }) %>
        </div>


        <div class="control-group">
          <%= f.label(:status, :class => "control-label") %>
          <div class="controls">
            <%= f.text_field(:status, :class => "input-xlarge field", :data => { :validation => "required validate_max_length length50", "validation-error-msg" => "Status is required and cannot be longer than 50 characters." }) %>
          </div>
        </div>

      </div>
      <%= f.hidden_field(:_destroy, :class => "field") %>
    </fieldset>
  </div>
  <div class="modal-footer">
    <button id="addButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" title="Add this Step to this Test Case.">Add</button>
    <button id="cancelButton" type="button" class="btn btn-inverse" data-dismiss="modal" aria-hidden="true" title="Close this screen without adding the Step to the Test Case.">Cancel</button>
  </div>
</div>

<script type="text/javascript">
  stepFieldsUI.init();
</script>